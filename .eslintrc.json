{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "settings": {
        "import/extensions": [
            ".js",
            ".ts"
        ]
    },
    "rules": {
        "linebreak-style": "off",
        "import/extensions" : [
            "error",
            "always",
            {
                "ignorePackages": true
            }
        ],
        "import/no-unresolved": [
            1,
            {
                "amd": true
            }
        ],
        "import/prefer-default-export": "warn"
    }
}